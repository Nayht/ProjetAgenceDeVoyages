{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="inpage-title">Circuit {{ circuit.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="emphase">Id</th>
                <td>{{ circuit.id }}</td>
            </tr>
            <tr>
                <th class="emphase">Description</th>
                <td>{{ circuit.description }}</td>
            </tr>
            <tr>
                <th class="emphase">PaysDepart</th>
                <td>{{ circuit.paysDepart }}</td>
            </tr>
            <tr>
                <th class="emphase">VilleDepart</th>
                <td>{{ circuit.villeDepart }}</td>
            </tr>
            <tr>
                <th class="emphase">VilleArrivee</th>
                <td>{{ circuit.villeArrivee }}</td>
            </tr>
            <tr>
                <th class="emphase">DureeCircuit</th>
                <td>{{ circuit.dureeCircuit }}</td>
            </tr>

            <tr>
                <th class="emphase">Etapes</th>
                <td>
                    {% for etape in circuit.etapes %}
                        {{ etape.numeroEtape }}.{{ etape.villeEtape }} &emsp;
                    {% else %}
                        DIRECT
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_circuit_index') }}">Retour aux circuits</a>
    <br>
    <a href="{{ path('admin_circuit_edit', {'id': circuit.id}) }}">Editer</a>

    {{ include('back/circuit/_delete_form.html.twig') }}
{% endblock %}
